{
  "name": "@spotify-mcp/core",
  "version": "1.0.0",
  "description": "Pure domain services and business logic for Spotify MCP",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:property": "vitest run test/property",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build && pnpm test && pnpm lint"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "spotify",
    "mcp",
    "domain",
    "business-logic",
    "hexagonal-architecture"
  ],
  "author": "Spotify MCP Contributors",
  "license": "MIT",
  "homepage": "https://github.com/spotify-mcp/spotify-mcp#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/spotify-mcp/spotify-mcp.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/spotify-mcp/spotify-mcp/issues"
  },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  }
}