{
  "name": "spotify-mcp",
  "version": "0.1.0",
  "description": "A modern, robust Spotify MCP implementation using hexagonal architecture",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter=server dev",
    "cli": "pnpm --filter=@spotify-mcp/cli dev",
    "oauth": "node scripts/oauth-bootstrap.mjs",
    "dev:cert": "node scripts/gen-dev-cert.mjs",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:integration": "pnpm -r test:integration",
    "test:e2e": "pnpm --filter=server test:e2e",
    "test:mcp": "vitest run packages/mcp --coverage",
    "test:spotify": "vitest run packages/spotify --coverage",
    "record:spotify": "RECORD=1 vitest run packages/spotify",
    "parity": "pnpm -w --filter @spotify-mcp/parity parity:run --cases=default",
    "ci": "pnpm lint && pnpm typecheck && pnpm -w test && pnpm test:spotify && pnpm test:mcp && pnpm test:e2e && pnpm parity",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "clean": "pnpm -r clean",
    "release": "npm version",
    "publish:core": "pnpm --filter=@spotify-mcp/core publish",
    "publish:mcp": "pnpm --filter=@spotify-mcp/mcp publish",
    "publish:all": "pnpm publish:core && pnpm publish:mcp"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "spotify",
    "mcp",
    "model-context-protocol",
    "claude",
    "music",
    "api"
  ]
}